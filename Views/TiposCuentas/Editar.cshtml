@model TipoCuenta


@{

    ViewData["Title"] = "Editar el tipo de cuenta";
}


<h1 >Editar tipo de ceunta: @Model.Nombre</h1>





<div asp-validation-sumary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Editar">

    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="index"> cancelar</a>
</form>



<!--anadiendo jquery-->
@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}
