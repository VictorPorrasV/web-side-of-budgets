@model IEnumerable<TipoCuenta>

@{
    ViewData["Tittle"] = "Tipos de cuentas";
}

<h1>Tipos de cuentas</h1>


<h5>El tipo cuenta se refiere a como puedes agrupar tus cuentas. Ejemplo prestamos,tarjetas de credito etc</h5>


<a asp-action="Crear" class="btn btn-primary mb-3">Crear nuevo</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Acciones
            </th>
            <th>
                Nombre

            </th>
        </tr>
    </thead>

    <tbody>

        @foreach( var tipocuenta in Model)
        {
            <tr>
                <td>
                    <a asp-action="Editar" asp-route-id="@tipocuenta.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Borrar" asp-route-id="@tipocuenta.Id" class="btn btn-danger"> Borrar </a>
                </td>
                <td>
                    @tipocuenta.Nombre
                </td>
            </tr>
        }
    </tbody>
</table>